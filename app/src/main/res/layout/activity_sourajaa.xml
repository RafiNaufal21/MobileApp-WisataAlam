<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sourajaa">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="40dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30sp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30sp">
                    <ImageView
                        android:id="@+id/image_cover"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:layout_marginHorizontal="5dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/sourajaa"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:fontFamily="@font/fontku"
                        android:background="@drawable/bg_textlisr"
                        android:layout_marginTop="270sp"
                        android:textSize="65sp"
                        android:gravity="center"
                        android:paddingHorizontal="15dp"
                        android:layout_marginHorizontal="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Souraja"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="368dp"
                    android:layout_marginStart="265dp"
                    android:background="@drawable/bg_rate1"
                    android:elevation="9dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 4.8"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginStart="345dp"
                    android:layout_marginTop="368dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_baseline_share_24"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="370dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Souraja Cagar Budaya,\nKota Palu"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:drawableStart="@drawable/ic_baseline_location_on_24"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Experience by Hairul Yasin"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_marginStart="100dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_baseline_people_alt_24" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingHorizontal="15dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Souraja atau disebut juga Banua Oge adalah rumah adat atau rumah tradisional Indonesia yang berasal dari Kelurahan Lere, Kecamatan Palu Barat, Kota Palu, Provinsi Sulawesi Tengah. Rumah adat ini dibangun pada abad ke-19 masehi atas prakarsa Raja Yodjokodi dan berfungsi sebagai tempat tinggal keluarga raja dan juga sebagai pusat pemerintahan kerajaan. Souraja ini merupakan sisa-sisa bangunan peninggalan Kerajaan Palu waktu itu yang dibangun oleh Raja Palu yang kepemilikannya selalu berganti. Souraja adalah Istana Raja Palu, karena sejak didirikannya bangunan ini ditempati oleh Raja-Raja Palu dan keluarganya silih berganti oleh keluarganya. Kepemilikan bangunan ini pun berlaku secara turun-temurun."/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>